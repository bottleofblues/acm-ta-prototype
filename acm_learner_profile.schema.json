{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ACM Learner Profile",
  "type": "object",
  "properties": {
    "learner_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "consents": {
      "type": "object",
      "properties": {
        "use_personal_site": {
          "type": "boolean"
        },
        "use_linkedin": {
          "type": "boolean"
        },
        "store_job_description": {
          "type": "boolean"
        }
      },
      "required": [
        "use_personal_site",
        "use_linkedin",
        "store_job_description"
      ]
    },
    "personal_site_urls": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "linkedin_profile_url": {
      "type": "string"
    },
    "linkedin_pasted_sections": {
      "type": "string"
    },
    "job_description_text": {
      "type": "string"
    },
    "day90_outcomes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "created_iso": {
      "type": "string",
      "format": "date-time"
    },
    "updated_iso": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "learner_id",
    "email",
    "consents"
  ]
}